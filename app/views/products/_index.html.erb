<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.price %></td>
    <td><%= link_to "Edit", edit_product_path(product), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", product_path(product), method: :delete, remote: true, class: "btn btn-danger", data: { confirm: "Are you sure ?" } %></td>
  </tr>
<% end %>
